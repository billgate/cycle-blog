{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "rules" : {
    "no-console": 2,
    "no-debugger": 2,
    "quotes": [1, "single", "avoid-escape"],
    "comma-dangle": [2, "never"],
    "new-cap": [0],
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "semi": [1, "never"]
  }
}
